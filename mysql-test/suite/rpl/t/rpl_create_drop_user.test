--source include/master-slave.inc

connection master;
CREATE USER u1@localhost IDENTIFIED BY 'abcdefghijk';
connect (user_a, localhost, u1,'abcdefghijk',);
connection user_a;
SELECT CURRENT_USER;
disconnect user_a;

connection master;
CREATE USER IF NOT EXISTS u2@localhost;
connect (user_a, localhost, u2,,);
connection user_a;
SELECT CURRENT_USER;
disconnect user_a;

connection master;
CREATE OR REPLACE USER u1@localhost IDENTIFIED BY 'abcdefghijk';
connect (user_a, localhost, u1,'abcdefghijk',);
connection user_a;
SELECT CURRENT_USER;
disconnect user_a;

connection master;
sync_slave_with_master;

SELECT User FROM mysql.user;

connection master;
--error ER_CANNOT_USER
CREATE USER u1@localhost;

--error ER_CANNOT_USER
DROP USER u3@localhost;

sync_slave_with_master;

SELECT User FROM mysql.user;

connection master;
DROP USER IF EXISTS u1@localhost;
DROP USER u2@localhost;
DROP USER IF EXISTS u3@localhost;
sync_slave_with_master;

SELECT User FROM mysql.user;

--source include/rpl_end.inc
